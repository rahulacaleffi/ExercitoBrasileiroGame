@model IEnumerable<JogosDeGuerraModel.Batalha>

@{
    ViewBag.Title = "Index";
}

<h2>Batalhas</h2>

<p>
    <button  type="button" onclick="CriarNovaBatalha(1)">Entrar em novo Jogo</button>    
</p>
<table class="table">
    <tr>
        <th>
            Jogador 1
        </th>
        <th>
            Jogador 2
        </th>
        <th>
            Vencedor
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExercitoBranco.Usuario.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExercitoPreto.Usuario.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vencedor.Usuario.Email)
        </td>
        <td>
            @Html.ActionLink("Participar ou visualizar batalha", "Tabuleiro", "BatalhasMVC", new { Id = item.Id }, null) |
            @Html.ActionLink("Ver informações", "Details", new { id = item.Id }) |
        </td>
    </tr>
    }
    @section MeusScripts{
        <script src="~/Scripts/Tabuleiro.js"></script>
    }

</table>
